{
  "name": "web",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceweb": "apps/web/src",
  "implicitDependencies": ["ui"],
  "targets": {
    "build": {
      "inputs": ["!{projectRoot}/pwa-assets.config.ts", "!{projectRoot}/public/assets/logo.png"],
      "executor": "qwik-nx:build",
      "options": {
        "runSequence": ["web:build.client", "web:build.ssr", "web:build.functions", "web:build.cloudflare", "web:build.bundle"],
        "outputPath": "dist/apps/web"
      },
      "dependsOn": [
        {
          "dependencies": true,
          "target": "build",
          "params": "ignore"
        },
        {
          "target": "build.pwa",
          "params": "ignore"
        }
      ],
      "configurations": {
        "preview": {}
      }
    },
    "build.client": {
      "executor": "@nx/vite:build",
      "options": {
        "outputPath": "dist/apps/web",
        "configFile": "apps/web/vite.config.ts"
      }
    },
    "build.ssr": {
      "executor": "@nx/vite:build",
      "defaultConfiguration": "preview",
      "options": {
        "outputPath": "dist/apps/web"
      },
      "configurations": {
        "preview": {
          "ssr": "src/entry.ssr.tsx",
          "mode": "production"
        }
      }
    },
    "build.server": {
      "executor": "@nx/vite:build",
      "options": {
        "outputPath": "dist/apps/web",
        "configFile": "apps/web/adapters/cloudflare-pages/vite.config.ts"
      }
    },
    "build.bundle": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["mkdir -p dist/apps/web/deploy/", "cp -r dist/apps/web/client/* dist/apps/web/deploy/", "cp -r dist/apps/web/server/ dist/apps/web/deploy/server/", "echo 'Bundled to dist/apps/web/deploy'"],
        "parallel": false
      }
    },
    "build.pwa": {
      "inputs": ["{projectRoot}/pwa-assets.config.ts", "{projectRoot}/public/assets/logo.png"],
      "outputs": ["{projectRoot}/public/assets/*", "!{projectRoot}/public/assets/logo.png"],
      "executor": "nx:run-script",
      "cache": true,
      "options": {
        "script": "generate-pwa-assets"
      }
    },
    "deploy": {
      "executor": "nx:run-commands",
      "options": {
        "command": "wrangler pages deploy dist/apps/web/deploy --project-name=certifine"
      }
    },
    "preview": {
      "executor": "@nx/vite:preview-server",
      "dependsOn": [
        {
          "projects": "ui",
          "target": "build"
        }
      ],
      "options": {
        "buildTarget": "web:build",
        "port": 4200
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["{options.reportsDirectory}"],
      "options": {
        "passWithNoTests": true,
        "reportsDirectory": "../../coverage/apps/web"
      }
    },
    "serve": {
      "executor": "@nx/vite:dev-server",
      "dependsOn": [
        {
          "projects": "ui",
          "target": "build"
        }
      ],
      "options": {
        "buildTarget": "web:build.client",
        "mode": "ssr",
        "port": 3000
      }
    },
    "serve.debug": {
      "executor": "nx:run-commands",
      "dependsOn": [
        {
          "projects": "ui",
          "target": "build"
        }
      ],
      "options": {
        "command": "node --inspect-brk ../../node_modules/vite/bin/vite.js --mode ssr --force",
        "cwd": "apps/web"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/web/**/*.{ts,tsx,js,jsx}"]
      }
    }
  },
  "tags": []
}
